@model nemtudom.Models.ContentModel

@{
    Layout = Layout;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tartalom</title>
    <style>
        body {
            margin-top: 200px;
        }
    </style>
</head>
<body>
<h2>Edit Content</h2>

<form asp-action="Edit">
    <div class="form-group">
        <input type="hidden" asp-for="content_id" />
        <label asp-for="content_title" class="control-label"></label>
        <input asp-for="content_title" class="form-control" />
        <span asp-validation-for="content_title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="content_body" class="control-label"></label>
        <textarea asp-for="content_body" class="form-control"></textarea>
        <span asp-validation-for="content_body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="content_img" class="control-label"></label>
        <input asp-for="content_img" class="form-control" />
        <span asp-validation-for="content_img" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="content_video" class="control-label"></label>
        <input asp-for="content_video" class="form-control" />
        <span asp-validation-for="content_video" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="content_link" class="control-label"></label>
        <input asp-for="content_link" class="form-control" />
        <span asp-validation-for="content_link" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
</body>
</html>